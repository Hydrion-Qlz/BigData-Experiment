<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.xjtu.xjtuse.assistance.login.dao.LoginDao">
    <select id="emailExist" resultType="Boolean">
        select EXISTS(
                       select *
                       from t_user
                       where email = #{email})
    </select>

    <update id="register">
        insert into t_user(email, password)
        values (#{email}, #{password})
    </update>

    <select id="getPwd" resultType="String">
        select password
        from t_user
        where email = #{email}
    </select>
</mapper>
